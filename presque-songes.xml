                    <note n="j" xml:id="n-13fr-j" target="note-13fr-j">Ms1 : <del rend="overstrike">la course</del> </note>
                    <note n="k" xml:id="n-13fr-k" target="note-13fr-k">
                        <hi rend="italic">Dans</hi> Ms1 <hi rend="italic">et</hi> Tps1<hi rend="italic">,</hi> taureau furieux <hi rend="italic">est ajouté à la main à l’interligne supérieur. </hi> </note>
                    <note n="l" xml:id="n-13fr-l" target="note-13fr-l">Ms1 : <del rend="overstrike">qui court du désert</del>, </note>
                    <note n="m" xml:id="n-13fr-m" target="note-13fr-m">
                        <hi rend="italic">Sans virgule dans</hi> Ms1 <hi rend="italic">et</hi> Tps1<hi rend="italic">.</hi> </note>
                    <note n="n" xml:id="n-13fr-n" target="note-13fr-n">Ms1 : non un </note>
                    <note n="o" xml:id="n-13fr-o" target="note-13fr-o">Ms1 : <del rend="overstrike">sont en broussailles</del> se hérissent // Tps1 : <del rend="overstrike">se hérissent</del> </note>
