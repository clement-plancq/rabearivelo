                    <note n="l" xml:id="n-26fr-m" target="note-26fr-m">Ms1 : d’une/ de la</note>
                    <note n="m" xml:id="n-26fr-n" target="note-26fr-n">Ms1 : avaient dû s’embarquer</note>
